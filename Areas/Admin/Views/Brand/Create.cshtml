@model Brand

<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <span class="text text-danger" asp-validation-for="Name"></span>

        </div>

        <div class="form-group">
            <select asp-for="PositionId" class="form-select" aria-label="Disabled select example">
                <option>Choose Position</option>
                @foreach (var item in ViewBag.Positions)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>



        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>