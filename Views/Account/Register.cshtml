@model RegsiterViewModel

@{
    Layout = null;
}

<style>
    .div1{
        background-color:aqua;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<div class="div1">

    <section class="vh-100" style="background-color: #9A616D;">
        <div  class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-8">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-7 col-lg-7 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-5 d-flex align-items-center">
                                <div class="card-body p-6 p-lg-9 text-black">
                                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                    <form method="post" enctype="multipart/form-data">

                                        <div class="form-outline mb-4">
                                            <input asp-for="Name" class="form-control" />
                                            <label class="form-label" asp-for="Name"></label>
                                            <span class="text text-danger" asp-validation-for="Name"></span>
                                        </div>
                                      
                                        <div class="form-outline mb-4">
                                            <input asp-for="SurName" class="form-control" />
                                            <label class="form-label" asp-for="SurName"></label>
                                            <span class="text text-danger" asp-validation-for="SurName"></span>
                                        </div>
                                      
                                        <div class="form-outline mb-4">
                                            <input asp-for="Email" class="form-control" />
                                            <label class="form-label" asp-for="Email"></label>
                                            <span class="text text-danger" asp-validation-for="Email"></span>
                                        </div>
                                     

                                        <div class="form-outline mb-4">
                                            <input asp-for="UserName" class="form-control" />
                                            <label class="form-label" asp-for="UserName"></label>
                                            <span class="text text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                      

                                        <div class="form-outline mb-4">
                                            <input asp-for="Password" class="form-control" />
                                            <label class="form-label" asp-for="Password"></label>
                                            <span class="text text-danger" asp-validation-for="Password"></span>

                                        </div>
                                      
                                        <div class="form-outline mb-4">
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <label class="form-label" asp-for="ConfirmPassword"></label>
                                            <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>

                                        </div>
                                      

                                           <div class="form-group">
                                        <label asp-for="FormFile">  Profile Photo</label>
                                        <input accept="image/*" type="file" class="form-control" asp-for="FormFile" />
                                        <span class="text text-danger" asp-validation-for="FormFile"></span>

                                    </div>
                                      

                                        <div class="form-check d-flex justify-content-center mb-5">
                                            <input class="form-check-input me-2" asp-for="IsTerms" />
                                            <label class="form-check-label" asp-for="IsTerms">
                                                I agree all statements in <a href="#!">Terms of service</a>
                                            </label>
                                            <span class="text text-danger" asp-validation-for="IsTerms"></span>
                                        </div>


                                        <a style="color:orange;font-size:18px;" asp-controller="account" asp-action="login">Login</a>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-info btn-lg btn-block" type="submit">Register</button>
                                        </div>

                                     



                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>