@model Login

@{
    Layout = null;
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <form method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <img src="~/assets/Images/afn logo white text 1.png" />
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-4">
                                        <input asp-for="UserName" class="form-control" />
                                        <label class="form-label" asp-for="UserName"></label>
                                        <span class="text text-danger" asp-validation-for="UserName"></span>
                                    </div>
                                   

                                  
                                        <div class="form-outline mb-4">
                                        <input asp-for="Password" class="form-control" />
                                        <label class="form-label" asp-for="Password"></label>
                                        <span class="text text-danger" asp-validation-for="Password"></span>
                                    </div>
                                 
                                 

                                   
                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" asp-for="IsRememberMe" />
                                        <label class="form-check-label" asp-for="IsRememberMe">
                                            Remember me
                                        </label>

                                        <span class="text text-danger" asp-validation-for="IsRememberMe"></span>
                                    </div>


                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>


                                    <div style="display:flex;flex-direction:column;">
                                        <a class="small text-muted" asp-controller="account" asp-action="forgetpassword">Forgot password?</a>
                                        <a style="color:orange;font-size:18px;" class="small text-muted" asp-controller="account" asp-action="Register">Dont your have account??Register</a>
                                    </div>

                                  

                                </form>
                         
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>